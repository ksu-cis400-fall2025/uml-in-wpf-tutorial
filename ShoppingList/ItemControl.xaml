<UserControl x:Class="ShoppingList.ItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShoppingList"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <CheckBox Grid.Column="0" IsChecked="{Binding Path=IsFound}"/>
        <TextBlock Grid.Column="1">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{1} {0} from {2}">
                    <Binding Path="Name"/>
                    <Binding Path="Quantity"/>
                    <Binding Path="Location"/>
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <local:CountBox Grid.Column="2" Count="{Binding Path=Quantity, Mode=TwoWay}" Margin="5,0,5,0"/>
        <ComboBox Grid.Column="3" ItemsSource="{Binding Source={StaticResource categories}}" SelectedItem="{Binding Path=Location}"/>
    </Grid>
</UserControl>
